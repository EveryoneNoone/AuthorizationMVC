<h2>Position</h2>
@using (Html.BeginForm("Position", "Department", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add new department</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.IdDepartment, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("IdDepartment", (SelectList)ViewBag.Departments, "Select department"@*, new { @onchange = "GetPositionsList(this.value)" }*@)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
